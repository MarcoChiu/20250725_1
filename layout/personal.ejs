<form>
    <!-- start 個人資料 -->
    <div class="row m-6">

        <!-- start col-4 左邊-->
        <div class="col-4">
            <h2 class="text-primary  fs-5 ">個人資料</h2>
            
        </div>
        <!-- end col-4 -->

        <!-- start col-8 右邊-->
        <div class="col-8">

            <!--頭像 -->
            <div class="mb-4">
                <img src="../assets/images/avatar.png" alt="個人頭像" class="me-3 rounded-circle" />
                <label for="upload" class="btn border align-bottom">
                    <span class="material-symbols-outlined">
                        upload
                    </span>更新頭貼</label>
            </div>
            <!-- 姓名 -->
            <div class="mb-4">
                <div class="form-floating mb-4">
                    <input type="text" class="form-control" id="name" placeholder="姓名" value="Mokumaru" />
                    <label for="name">姓名</label>
                </div>
            </div>
            <!-- 性別 -->
            <div class="mb-2">
                <label for="inlineRadio1" class="form-label">
                    性別</label>
            </div>
            <div class="mb-4">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                        value="option1" checked>
                    <label class="form-check-label" for="inlineRadio1">女性</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2"
                        value="option2">
                    <label class="form-check-label" for="inlineRadio2">男性</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3"
                        value="option3">
                    <label class="form-check-label" for="inlineRadio3">不用透露</label>
                </div>
            </div>
            <!-- 生日 -->
            <div class="mb-4">
                <div class="form-floating mb-4">
                    <input type="date" class="form-control" id="birthday" placeholder="生日" value="2000-01-10" />
                    <label for="birthday">生日</label>
                </div>
            </div>
            <!-- 密碼 -->
            <div class="mb-2">
                <label for="inlineRadio1" class="form-label">
                    密碼
                </label>
            </div>
            <div class="mb-4">
                <button type="button" class="btn  btn-white" data-bs-toggle="modal" data-bs-target="#exampleModal"
                    data-bs-whatever="@mdo">修改密碼 <span class="material-symbols-outlined align-bottom">
                        keyboard_arrow_right
                    </span> </button>

                <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modelwidth">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-2" id="exampleModalLabel">修改密碼</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form>

                                    <div class="form-floating mb-4">
                                        <input type="password" class="form-control" id="password1" placeholder="新密碼" />
                                        <label for="password1" class="text-black">新密碼</label>
                                    </div>

                                    <div class="form-floating mb-4">
                                        <input type="password" class="form-control" id="password2" placeholder="再次密碼" />
                                        <label for="password2" class="text-black">再次密碼</label>
                                    </div>

                                </form>
                            </div>
                            <div class="modal-footer">

                                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">變更密碼</button>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <!-- 信箱 -->
            <div class="mb-4">
                <div class="form-floating mb-4">
                    <input type="email" class="form-control" id="email" placeholder="信箱" value="mokumaru@mail.com" />
                    <label for="email">信箱</label>
                    <span class="text-secondary fs-1">盡量勿使用Yahoo或Hotmail郵件信箱，以免因擋信、漏信</span>
                </div>
            </div>
            <!-- 電話 -->
            <div class="mb-4">
                <div class="form-floating mb-4">
                    <input type="tel" class="form-control" id="tel" placeholder="電話" value="0912-345-678" />
                    <label for="tel">電話</label>
                </div>
            </div>
            <!-- 地址 -->
            <div class="mb-4">
                <div class="form-floating mb-4">
                    <input type="text" class="form-control" id="address" placeholder="通訊地址" value="高雄市三民區九如一路87" />
                    <label for="address">通訊地址</label>
                </div>
            </div>
        </div>
        <!-- end col-8 -->
    </div>
    <!-- end 個人資料 -->

    <!-- start 下方按鈕 -->
    <div class="d-flex justify-content-center m-6">
        <button class="btn btn-white me-5">重新填寫 <span class="material-symbols-outlined align-bottom">
                keyboard_arrow_right
            </span> </button>
        <button class="btn btn-dark">儲存更新 <span class="material-symbols-outlined align-bottom">
                keyboard_arrow_right
            </span> </button>
    </div>
    <!-- end 下方按鈕 -->
</form>